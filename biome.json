{
	"$schema": "https://biomejs.dev/schemas/1.7.3/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"correctness": {
				"noUnusedImports": "error",
				"noUnreachable": "warn"
			},
			"style": {
				"useConsistentArrayType": {
					"options": {
						"syntax": "generic"
					}
				}
			}
		}
	},
	"javascript": {
		"parser": {
			"unsafeParameterDecoratorsEnabled": true
		}
	},
	"files": {
		"ignore": ["./dist", "./node_modules", "./example/node_modules", "./.tsimp", "./coverage"]
	},
	"formatter": {
		"lineWidth": 120
	}
}
